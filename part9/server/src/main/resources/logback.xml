<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="CONSOLE_PATTERN"
                    source="logging.pattern.console"
                    defaultValue="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- STDERR に出す appender を定義 -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ルートロガー。ログをほぼ消したければ ERROR か OFF にする -->
    <root level="INFO">
        <appender-ref ref="STDERR"/>
    </root>

</configuration>